<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Tenant_Infor_Activity"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/TI_ll_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/TI_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/TI_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="TENANT INFOMATION"
            android:textSize="22sp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_gravity="center"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/TI_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TI_ll_5"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/TI_ll_3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/btn_book"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:id="@+id/TI_image_1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TI_ll_4"
            android:layout_width="190dp"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:fontFamily="@font/poppinsregular"/>

            <EditText
                android:id="@+id/TI_edt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="Email"
                android:enabled="false"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: "
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:fontFamily="@font/poppinsregular"/>

            <EditText
                android:id="@+id/TI_edt_roomcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="Room code"
                android:textCursorDrawable="@null"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TI_ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TI_ll_1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/TI_edt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/TI_edt_phone"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/TI_edt_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Address"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: "
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/TI_edt_age"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:hint="Age"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/button_shape2"
                android:gravity="center"
                android:fontFamily="@font/poppinssemibold">

                <EditText
                    android:id="@+id/TI_spinner_gender"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:hint="Gender"
                    android:textColor="@color/black"
                    android:paddingLeft="20dp"
                    android:background="@drawable/button_shape2"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppinssemibold"
                    android:inputType="none"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/TI_btn_delete"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/TI_ll_2"
        android:text="DELETE"
        android:background="@drawable/button_shape2"
        android:backgroundTint="@color/xanh_coban"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        />


</RelativeLayout>