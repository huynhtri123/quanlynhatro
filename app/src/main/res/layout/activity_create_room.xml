<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CreateRoomActivity"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:background="@color/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:id="@+id/LR_icon_back"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113dp"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etRoomCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Phòng" />

        <EditText
            android:id="@+id/etRoomUrlImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL Hình Ảnh Phòng" />

        <EditText
            android:id="@+id/etRoomSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kích Thước Phòng" />

        <EditText
            android:id="@+id/etRoomStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trạng Thái Phòng" />

        <EditText
            android:id="@+id/etRoomPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá Phòng" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="Lưu" />
    </LinearLayout>

</RelativeLayout>