<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InvoiceDetailActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ID_ll_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/PI_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/PI_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="INVOICE DETAIL"
            android:textSize="22sp"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/ID_ed_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ID_ll_5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_shape2"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:hint="0"
        android:paddingLeft="20dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/PI_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID_ed_name"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/ID_ll_1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Code: "
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                android:textColor="@color/xanh1"
                android:fontFamily="@font/poppinsregular"/>

            <EditText
                android:id="@+id/PI_edt_roomcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="ROOM-CODE"
                android:textCursorDrawable="@null"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ID_ll_2"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Price: "
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/xanh1"
                android:fontFamily="@font/poppinsregular"/>

            <EditText
                android:id="@+id/PI_edt_roomprice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="ROOM-PRICE"
                android:textCursorDrawable="@null"
                android:paddingLeft="20dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/PI_ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PI_ll_1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electricity Cost ($): "
            android:textColor="@color/xanh1"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/ID_ed_electricity_cost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="0"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water Cost ($): "
            android:layout_marginTop="10dp"
            android:textColor="@color/xanh1"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/ID_ed_water_cost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="0"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Cost ($): "
            android:layout_marginTop="10dp"
            android:textColor="@color/xanh1"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/ID_ed_parking_cost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="0"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi Cost ($): "
            android:layout_marginTop="10dp"
            android:textColor="@color/xanh1"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinsregular"/>

        <EditText
            android:id="@+id/ID_ed_wifi_cost"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="0"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL ($): "
            android:layout_marginTop="10dp"
            android:textColor="@color/red_dark"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppinssemibold"/>

        <EditText
            android:id="@+id/ID_ed_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="0"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            />

    </LinearLayout>

    <Button
        android:id="@+id/ID_btn_make_payment"
        android:layout_marginLeft="20dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/PI_ll_2"
        android:text="Make Payment"
        android:background="@drawable/button_shape2"
        android:backgroundTint="@color/xanh_coban"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ID_btn_make_save"
        android:layout_marginLeft="20dp"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/PI_ll_2"
        android:text="SAVE"
        android:background="@drawable/button_shape2"
        android:backgroundTint="@color/xanh_coban"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsbold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>