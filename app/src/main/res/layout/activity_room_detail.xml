<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RoomDetailActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/RD_ll_5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/RD_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/RD_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="ROOM DETAIL"
            android:textSize="22sp"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/RD_image_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/RD_ll_5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/background"
        android:src="@drawable/room_image2" />

    <LinearLayout
        android:id="@+id/RD_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RD_image_1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/RD_ll_1"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="Room Code: "
                android:textColor="@color/xanh1" />

            <EditText
                android:id="@+id/RD_edt_roomcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="ROOM-CODE"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RD_ll_2"
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="Room Price: "
                android:textColor="@color/xanh1" />

            <EditText
                android:id="@+id/RD_edt_roomprice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_shape2"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:hint="ROOM-PRICE"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RD_ll_2"
        android:layout_width="395dp"
        android:layout_height="171dp"
        android:layout_below="@+id/RD_ll_1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="20dp"
            android:text="Room size: "
            android:textColor="@color/xanh1" />

        <EditText
            android:id="@+id/RD_ed_roomSize"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppinssemibold"
            android:hint="0"
            android:paddingLeft="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:paddingLeft="20dp"
            android:text="Status: "
            android:textColor="@color/xanh1" />

        <EditText
            android:id="@+id/RD_ed_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/white"
            android:enabled="false"
            android:fontFamily="@font/poppinssemibold"
            android:hint="0"
            android:paddingLeft="20dp"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="109dp"
        android:layout_below="@+id/RD_ll_2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="TENANT: "
                android:textColor="@color/xanh1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/RD_tv_tenantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="Name "
                android:textColor="@color/xanh1"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="ID: "
                android:textColor="@color/xanh1"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/RD_tv_tenantID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppinsregular"
                android:paddingLeft="20dp"
                android:text="000 "
                android:textColor="@color/xanh1"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/RD_btn_make_save"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/xanh_coban"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/RD_btn_make_delete"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_shape2"
            android:backgroundTint="@color/xanh_coban"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:padding="5dp"
            android:text="DELETE"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>