<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:background="@drawable/box_tenant"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:id="@+id/LT_rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        >

        <ImageView
            android:id="@+id/LT_image_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/user"
            android:background="@color/background"/>
        
        <TextView
            android:id="@+id/LT_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LT_image_1"
            android:text="Name"
            android:textSize="18sp"
            android:fontFamily="@font/poppinssemibold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LT_rl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <LinearLayout
            android:id="@+id/LT_ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/LT_rl_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LT_tv_address1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Address: "
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LT_tv_roomSdt1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LT_tv_address1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Sdt:"
                    android:textSize="18sp" />

                <!--                <TextView-->
                <!--                    android:layout_width="120dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Price: "-->
                <!--                    android:textSize="18sp"-->
                <!--                    android:fontFamily="@font/poppinssemibold"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:layout_below="@+id/LT_tv_roomSdt1"-->
                <!--                    android:id="@+id/LT_tv_roomPrice1"-->
                <!--                    />-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LR_rl_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LT_tv_address"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="1111"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LT_tv_roomSdt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/LT_tv_address"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppinsregular"
                    android:text="0000000001"
                    android:textSize="18sp" />

<!--                <TextView-->
<!--                    android:id="@+id/LR_tv_roomPrice"-->
<!--                    android:layout_width="120dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/LR_tv_roomSdt"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:fontFamily="@font/poppinsregular"-->
<!--                    android:text="3000$"-->
<!--                    android:textSize="18sp" />-->

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/LT_btn_detail"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/LT_ll_1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/button_shape"
            android:text="Chi tiáº¿t"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>